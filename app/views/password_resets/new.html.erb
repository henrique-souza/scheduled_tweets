<%= tag.h1 "Reset your password" %>

<%= form_with url: password_reset_path do |f| %>

  <%= content_tag :div, class: "mb-3" do %>
    <%= f.label :email, class: "form-label" %>
    <%= f.text_field :email, required: true, class: "form-control", placeholder: "example@domain.com" %>
  <% end %>

  <%= f.submit "Reset", class: "btn btn-secondary" %>
<% end %>
