<ul class="navbar-nav ms-auto text-white" >

  <% if Current.user %>
    <%= content_tag :div, class: "d-flex align-items-center justify-content-center container-fluid" do %>
      <%= link_to Current.user.email, edit_password_path %>
    <% end %>

    <%= content_tag :li, class:"nav-item" do %>
      <%= button_to 'Logout', logout_path, method: :delete, class: "btn btn-danger" %>
    <% end %>

  <% else %>
    <%= content_tag :li, class:"nav-item" do %>
      <%= link_to 'Sign Up', sign_up_path, class: "nav-link" %>
    <% end %>

    <%= content_tag :li, class:"nav-item" do %>
      <%= link_to 'Sign In', sign_in_path, class: "nav-link border border-white rounded-3" %>
    <% end %>
  <% end %>
</ul>
