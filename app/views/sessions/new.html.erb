<%= tag.h1 'Sign In'%>

<%= form_with url: sign_in_path do |f| %>

  <%= content_tag :div, class: "mb-3" do %>
    <%= f.label :email, class: "form-label" %>
    <%= f.text_field :email, required: true, class: "form-control", placeholder: "example@domain.com" %>
  <% end %>

  <%= content_tag :div, class: "position-relative mb-3" do %>
    <%= f.label :password, class: "form-label" %>
    <%= render 'password_resets/forgot_password' %>
    <%= f.password_field :password, required: true, class: "form-control", placeholder: "**********" %>
  <% end %>

  <%= f.submit "Sign In", class: "btn btn-primary" %>
<% end %>
